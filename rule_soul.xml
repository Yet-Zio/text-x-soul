<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<rules>
	<rule>
		<regex>(\b\d+\b)|(\b0[xX][0-9a-fA-F]+\b)|(\b0[b][01]+\b)</regex>
		<forecolor>#fc005c</forecolor>
	</rule>
	<rule>
		<regex>(?<=¡)(.*)(?=¡)</regex>
		<forecolor>#ff892e</forecolor>
		<font>
			<bold>true</bold>
		</font>
	</rule>
	<rule>
		<regex>[^\s]+@(.+\))</regex>
		<forecolor>#bdf772</forecolor>
		<font>
			<italic>true<italic>
		</font>
	</rule>
	<rule>
		<regex>([^\s]+\(\))</regex>
		<forecolor>#dbc9ff</forecolor>
	</rule>
	<rule global="false">
		<!-- Styles comments -->
		<startRegex>(¿.*)</startRegex>
		<closeRegex>(\?)</closeRegex>
		<forecolor>#6daabd</forecolor>
	<rule>
</rules>